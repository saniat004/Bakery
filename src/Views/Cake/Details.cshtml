
@model Cake

<h2>@Model.Name</h2>

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.ShortDescription</h4>

        <p>
            @Model.LongDescription
        </p>
        <p>
            @Model.NutritionName
        </p>
        <p>
            @Model.Calorie
        </p>
        <p>
            @Model.Protein
        </p>
        <p>
            @Model.fiber
        </p>
        <p>
            @Model.niacin
        </p>
        <p>
            @Model.magnesium
        </p>





        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-cakeId="@Model.CakeId">Add to cart</a>
            </p>
        </div>
    </div>
</div>